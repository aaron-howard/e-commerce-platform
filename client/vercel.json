{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://ecommerce-platform-api.vercel.app/api",
    "REACT_APP_STRIPE_PUBLISHABLE_KEY": "@stripe_publishable_key"
  }
}
